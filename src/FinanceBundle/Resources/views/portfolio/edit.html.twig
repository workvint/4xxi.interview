{% extends 'AppBundle:home:index.html.twig' %}

{% block body %}
    <h1>Portfolio </h1>

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <input type="submit" value="{{ 'portfolio.form.button.edit'|trans }}" />
    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a href="{{ path('portfolio_index') }}">{{ 'portfolio.form.list.label'|trans }}</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="{{ 'portfolio.form.button.delete'|trans }}">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
